{
  "name": "@patchworkdev/pdkmonorepo",
  "description": "Patchwork Development Kit Monorepo",
  "version": "0.2.5",
  "main": "src/index.ts",
  "scripts": {
    "clean": "pnpm run -r clean",
    "build": "pnpm run -r build",
    "test": "pnpm run -r test",
