    "codegen"
  ],
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "author": "Runic Labs, Inc",
  "license": "MIT",
  "dependencies": {
    "typescript": "5.5.4"
  },
  "devDependencies": {
    "@types/node": "22.5.1"
  }
}
