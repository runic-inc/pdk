{
  // "extends": "../../tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, // Enable type declaration generation
    "declarationMap": true,
    // Other compiler options...
    "composite": true,
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test-d.ts"],
  // "references": [{ "path": "../../apps/wizard/tsconfig.node.json" }]
}
