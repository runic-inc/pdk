{
    // "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "inlineSourceMap": true,
        //   "rootDir": ".",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        //   "baseUrl": ".",
        "paths": {
            // "@wizard/*": ["./apps/wizard/app/*"],
            // "@common/*": ["./common/*"],
            "@patchworkdev/common/*": ["../common/src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": [{ "path": "../common" }]
    // "references": [{ "path": "../../apps/wizard/tsconfig.node.json" }]
}
