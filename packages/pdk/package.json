{
    "name": "@patchworkdev/pdk",
    "description": "Patchwork Development Kit",
    "version": "0.3.0-rc.1",
    "main": "dist/index.js",
    "types": "src/index.ts",
    "exports": {
        ".": {
            "default": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./utils": {
            "default": "./dist/exports/index.js",
            "types": "./dist/exports/index.d.ts"
        }
    },
    "files": [
        "dist",
        "src",
        "/utils"
    ],
    "type": "commonjs",
    "scripts": {
        "start": "node dist/index.js",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "build": "tsc --build && cp -r ../../schemas dist",
        "build:wizard": "cd ../../apps/wizard && BUILD_OUT_DIR=../../packages/pdk/dist/wizard vite build",
        "build:all": "pnpm build && pnpm build:wizard"
    },
    "keywords": [
        "solidity",
        "patchwork",
        "codegen"
    ],
    "author": "Runic Labs, Inc",
    "license": "MIT",
    "dependencies": {
        "@commander-js/extra-typings": "12.1.0",
        "@hono/node-server": "1.12.2",
        "@patchworkdev/common": "workspace:*",
        "@ponder/core": "^0.5.17",
        "commander": "12.1.0",
        "execa": "9.5.0",
        "glob": "^11.0.0",
        "hono": "4.6.3",
        "lodash": "4.17.21",
        "ora": "8.1.0",
        "pino": "^9.5.0",
        "pino-pretty": "^13.0.0",
        "prettier": "3.3.3",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "^5.6.3",
        "viem": "2.21.9"
    },
    "bin": {
        "pdk": "dist/index.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/jest": "29.5.12",
        "@types/lodash": "4.17.12",
        "@types/node": "22.5.1",
        "@types/yargs": "17.0.33",
        "jest": "29.7.0",
        "ts-jest": "29.2.5",
        "vite": "5.4.2"
    }
}
