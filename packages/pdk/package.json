{
    "name": "@patchworkdev/pdk",
    "version": "0.2.2",
    "description": "Patchwork Development Kit",
    "main": "src/index.ts",
    "scripts": {
        "start": "node dist/index.js",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "build": "tsc --build && cp -r ../../schemas dist",
        "build:wizard": "cd ../../apps/wizard && BUILD_OUT_DIR=../../packages/pdk/dist/wizard vite build",
        "build:all": "pnpm build && pnpm build:wizard"
    },
    "keywords": [
      "solidity",
      "patchwork",
      "codegen"
    ],
    "author": "Runic Labs, Inc",
    "license": "MIT",
    "dependencies": {
      "@hono/node-server": "1.12.2",
      "@patchworkdev/common": "workspace:*",
      "hono": "4.6.3",
      "@ponder/core": "^0.5.17",
      "prettier": "3.3.3",
      "ts-node": "10.9.2",
      "tsconfig-paths": "4.2.0",
      "typescript": "5.5.4",
      "viem": "2.21.9",
      "yargs": "17.7.2"
    },
    "bin": {
      "pdk": "dist/index.js"
    },
    "devDependencies": {
      "@types/jest": "29.5.12",
      "@types/node": "22.5.1",
      "@types/yargs": "17.0.33",
      "jest": "29.7.0",
      "ts-jest": "29.2.5",
      "vite": "5.4.2"
    }
  }
